page: setup_cygwin
    module: perl

    my $home = $ENV{HOME}
    my $user
    $if $home=~/\/home\/(\w+)/
        $user=$1

    my @plist=("/Program Files", "/Users/$user/AppData/Local/Programs")

    $(if:1)
        &call probe, Java, jdk
            system "ln -sv \"$d/bin/javac\" $home/bin/"
            system "ln -sv \"$d/bin/java\" $home/bin/"

    $(if:1)
        &call probe, Python, Python
            system "ln -sv \"$d/python\" $home/bin/"
            $if $d=~/Python3/
                &call open_w, $home/lib/MyDef/python/_config.def
                     print Out "macros:\n    PYTHON3: 1\n"

subcode: probe(name, glob)
    $foreach $p in @plist
        my $p_dir="/cygdrive/c"."$p/$(name)/"
        chdir $p_dir or next
        my @all = glob("$(glob)*")
        $if @all
            my $d = $p_dir.$all[-1]
            BLOCK
            last
